    <script>

const searchFunc = () => {
  
    let filter = document.getElementById('myInput').value.toUpperCase();
    let elements = document.querySelectorAll('.prod');
 
    for (var i = 0; i < elements.length; i++) {
        let a = elements[i].querySelector("a");
        let value = a.innerHTML.toUpperCase();
       
